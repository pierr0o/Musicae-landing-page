<div id="testimonials">
	<div class="container">
		<div class="row">
			<% data.testimonials.each do |testimonial| %>
				<div class="col-xs-12 col-md-6">
					<div class="testimonial text-center padded">
						<%= image_tag testimonial.image_file, class:'img-circle' %>
						<h3><%= testimonial.name %></h3>
						<p><%= testimonial.content %></p>
					</div>
				</div>
			<% end %>
		</div>
	</div>
